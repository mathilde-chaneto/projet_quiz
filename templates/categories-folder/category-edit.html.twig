{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <main>
        <section id="category-container">
            <h1>
                Categorie - edition	     
            </h1>

            <article id="category-quiz">
                <div class="content">
                    <h2>
                        Catégorie à éditer :                
                    </h2>
                    <div id="category">
                        <figure>
                            <div class="icone">
                                {% if quiz.category.id is not defined %}
                                    <a href="{{ path('dev-quiz_categories') }}">
                                        <img src="/medias/{{ category.icone }}" alt="" />
                                    </a>
                                </div>
                                <figcaption>
                                    <span>
                                        <a href="{{ path('dev-quiz_categories') }}">
                                            {{ category.name }}
                                        </a>
                                    </span>
                                </figcaption>
                                {% else %}
                                    <a href="{{ path('dev-quiz_category-quizz', {'id' : quiz.category.id}) }}">
                                        <img src="/medias/{{ quiz.category.icone }}" alt="" />
                                    </a>
                                
                                </div>
                                <figcaption>
                                    <span>
                                        <a href="{{ path('dev-quiz_category-quizz', {'id' : quiz.category.id}) }}">
                                            {{ quiz.category.name }}
                                        </a>
                                    </span>
                                </figcaption>
                            {% endif %}
                            </div>
                        </figure>
                    </div>
                </div>
            </article>
            <article id="personnal-categories">
               
            <!--<button class="add-element">Ajouter</button>-->

            <h2>Formulaire d'édition de catégories</h2>

                {{form_start(form)}}
                            
                {{form_row(form.name, {'label': 'Nom :'})}}
                
                {{form_row(form.icone, {'label': 'Icone :'})}}
    
                {{form_row(form.resume, {'label': 'Résumé:'})}}	
              
                
                <div class="control">
                    <button id="submit">Envoyer</button>
                    <button id="back"><a href="{{ path('dev-quiz_categories') }}">Retour</a></button>
                </div>
    
                {{form_end(form)}}


            </article>
    </section>
</main>
{{ include('main/footer.html.twig') }}
{% endblock %}