{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} {% endblock %}

{% block body %} {{ parent() }}
                            
                <section class="color-quiz">
                    <div class="container">

                    <h3 class="title">
                    Score :
                    </h3>

                        <article class="media-quiz columns is-multiline is-mobile is-two-thirds-tablet is-desktop">
                     
                                {% for name in quiz %}
                                {% for players in player %}        
                                <div class="content figure is-flex is-flex-direction-row is-flex-wrap-wrap bottom">
                                  
                                        <figure class="image">
                                             <img src="/icones/{{name.icone}}" class="image is-128x128">
                                           <p class="subtitle" data-id="{{name.id}}">{{name.name}}</p>
                                        <div class="progres" value="{{players.score}}" max="5"></div>
                                        <span class="score">Score : {{players.score}}</span>
                                        </figure>
                                      
                                </div>

                         
                            {% endfor %}
                        {% endfor %}
                
                        </article>
                    </div>
                </section>
                
                 <p class=" quiz has-text-centered"><a href="{{ path('dev-quiz_create-quiz') }}" class="has-text-white"></a></p>

             <footer class="hero-footer">
                <div class="content">
                    <p class="has-text-centered"><a href="{{ path('dev-quiz_contact') }}" class="has-text-white">Contact</a></p>
                    

                </div>

            </footer>

        </div>
    </section>



{% endblock %}
