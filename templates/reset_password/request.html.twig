{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Reset your password
{% endblock %}

{% block body %}
	{{ parent() }}
	<main>
		<section id="request-container">
			{% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}
			<h1>Réinitialisation du mot de passe</h1>
			<article id="request">
				<h2>Renseignez votre email</h2>
				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
			
					<span class="color">Entrez votre email et nous vous enverrons un lien pour réinitinialiser votre mot de passe</span>
			

				<div class="control">
					<button>Envoyer</button>
				</div>
				{{ form_end(requestForm) }}
			</article>
		</section>
	</main>
	{{ include('main/footer.html.twig') }}

{% endblock %}
