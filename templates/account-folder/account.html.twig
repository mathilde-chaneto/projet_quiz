{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="/js/pass.js"></script>
   
{% endblock %}

{% block body %}
    {{ parent() }}
<main>
    <section id="account-container">
        <h1>Mon compte</h1>
            {% for message in app.flashes('account-success') %}
            <div class="notification is-success">
                {{ message }}
            </div>
        {% endfor %}
            <article id="account">
                    <div id="avatar">
                        <div>
                            <figure>
                                {% if app.user %}
                                    <img src="/avatar/{{ app.user.image }}">
                                {% endif %}
                            </figure>
                        </div>
                    </div>

                    {{ form_start(form) }}

                    {{ form_row(form.email) }}

                    {{ form_row(form.username) }}

                    <div class="buttons">
                        <button class="button button-edit">
                            <a href="{{ path('dev-quiz_account-edit', {id: app.user.id}) }}">
                                EDIT                               
                            </a>
                        </button>
                        <button class="button is-danger">
                            <a href="{{ path('dev-quiz_account-delete', {id: app.user.id}) }}">
                                Delete your account                              
                            </a>
                        </button>
                    </div>
                    {{ form_end(form) }}
                </article>
    </section>
</main>
{{ include('main/footer.html.twig') }}
{% endblock %}