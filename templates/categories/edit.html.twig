{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <main>
        <section id="category-container">
            <h1>
                Categorie - Edition	     
            </h1>

         
            <article id="personnal-categories">
               

            <h2>Formulaire d'édition </h2>

                {{form_start(form)}}
                            
                {{form_row(form.nameCategory, {'label': 'Nom :'})}}
                
                {{form_row(form.icone, {'label': 'Icone :'})}}
    
                {{form_row(form.resume, {'label': 'Résumé:'})}}	
              
                
                <div class="control">
                    <button id="submit">Envoyer</button>
                    <button id="back"><a href="{{ path('dev-quiz_categories') }}">Retour</a></button>
                </div>
    
                {{form_end(form)}}


            </article>
    </section>
</main>
{{ include('main/footer.html.twig') }}
{% endblock %}