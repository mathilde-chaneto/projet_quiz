<!DOCTYPE html>
<html class="has-navbar-fixed-top">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Dev - quiz{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
         <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
         <link rel="stylesheet" href="/css/changes.css">
     
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
        <script src="/js/app.js"></script>
        <script src="/js/submitanswer.js"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
     <section class="hero">
      <header class="hero-header">
            <nav class="navbar is-fixed-top" role="navigation" aria-label="main navigation">
                <div class="navbar-brand is-hidden-desktop">
                    <a class="navbar-item has-text-white has-text-weight-bold" href="{{ path('dev-quiz_main') }}">
                    <img src="/logo/final-logo.png"/>
                    </a>
                    
                      <div class="container-block">
                    <figure class="image is-48x48">
                        {% if app.user %}<img src="/avatar/{{ app.user.image}}" class="is-rounded image is-48x48"/>{% endif %} 
                    </figure>
                     <div class="content">
                     <p class="subtitle has-text-weight-bold"> {% if app.user %}{{ app.user.username}}{% endif %}</p>
                     </div>
                    </div>
                
                    <a role="button" class="navbar-burger has-text-white has-text-weight-bold" aria-label="menu"
                        aria-expanded="false" data-target="navbarBurger">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>

                <div id="navbarBurger" class="navbar-menu is-hidden-desktop">
                    <div class="navbar-start">
                        
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_main') }}">
                            HOME
                        </a>
                        {% if app.user %}
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_quiz', {'id': app.user.id}) }}">
                            QUIZ
                        </a>
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_score', {'id': app.user.id}) }}">
                            SCORE
                        </a>
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_account', {'id': app.user.id}) }}">
                            ACCOUNT
                        </a>

                        <div class="navbar-item is-flex is-flex-direction-row is-justify-content-center">
                            <div class="buttons is-flex is-flex-direction-column is-justify-content-center">
                                <a class="button is-info has-text-weight-bold" href="{{ path('app_logout') }}">
                                    LOG OUT
                                </a>
                            </div>
                        </div>

                        {% else %}
                        <div class="navbar-item is-flex is-flex-direction-row is-justify-content-center">
                            <div class="buttons is-flex is-flex-direction-column is-justify-content-center">
                                <a class="button is-info has-text-weight-bold" href="{{ path('app_login') }}">
                                    LOG IN
                                </a>
                                 <a class="button is-info has-text-weight-bold" href="{{ path('dev-quiz_sign-up') }}">
                                    SIGN UP
                                </a>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <div id="navbarBasic" class="navbar-menu">
                    <a class="navbar-item has-text-white has-text-weight-bold" href="{{ path('dev-quiz_main') }}">
                    <img src="/logo/final-logo.png"/>
                    </a>
                    
                   
                   
                        <div class="container-block">
                    <figure class="image is-48x48">
                        {% if app.user %}<img src="/avatar/{{ app.user.image}}" class="is-rounded image is-48x48"/>{% endif %} 
                    </figure>
                     <div class="content">
                     <p class="subtitle has-text-weight-bold"> {% if app.user %} {{ app.user.username}} {% endif %}</p>
                     </div>
                    </div>
                   
                    
                    <div class="navbar-item">

                     
                            <a class="navbar-item has-text-white has-text-weight-bold" href="{{ path('dev-quiz_main') }}">
                            HOME
                            </a>

                            {% if app.user %}
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_quiz', {'id': app.user.id}) }}">
                            QUIZ
                        </a>
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_score', {'id': app.user.id}) }}">
                            SCORE
                        </a>
                        <a class="navbar-item has-text-centered has-text-white has-text-weight-bold" href="{{ path('dev-quiz_account', {'id': app.user.id}) }}">
                            ACCOUNT
                        </a>

                        <div class="buttons">
                                <a class="button is-info has-text-weight-bold" href="{{ path('app_logout') }}">
                                    LOG OUT
                                </a>
                        </div>


                        {% else %}
                        <div class="buttons">
                                <a class="button is-info has-text-weight-bold" href="{{ path('app_login') }}">
                                    LOG IN
                                </a>
                                <a class="button is-info has-text-weight-bold" href="{{ path('dev-quiz_sign-up') }}">
                                    SIGN UP
                                </a>
                        </div>

                        {% endif %}
                            

                            

                    </div>
                

            </nav>

            </header>
        <div class="hero-body is-flex is-flex-direction-column is-justify-content-flex-end ">
            <figure class="test">
               <img src="/image/1687.jpg" />
            </figure>
       
        
        {% endblock %}
    </body>
</html>
