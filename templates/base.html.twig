<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Dev - quiz
            {% endblock %}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Run `composer require symfony/webpack-encore-bundle`
                   and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
            <link rel="stylesheet" href="/css/changes.css">

        {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            <script src="/js/app.js"></script>
        {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
                <header>
                    <nav class="navbar" role="navigation" aria-label="main navigation">
                        <div class="navbar-brand is-hidden-desktop">
                            <a class="navbar-item has-text-white has-text-weight-bold" href="{{ path('dev-quiz_main') }}">
                                <img src="/logo/final-logo.png" alt="accueil"/>
                            </a>

                            <div class="container-avatar">
                                <figure class="image is-48x48">
                                    {% if app.user %}
                                        <img src="/avatar/{{ app.user.image }}" class="is-rounded image is-48x48" alt="avatar" />
                                    {% endif %}
                                <figcaption>
                                    <p class="subtitle has-text-weight-bold">
                                        {% if app.user %}
                                            {{ app.user.username }}
                                        {% endif %}
                                    </p>
                                </figcaption>
                                </figure>
                            </div>

                            <a role="button" class="navbar-burger has-text-white has-text-weight-bold" aria-label="menu" aria-expanded="false" data-target="navbarBurger">
                                <span aria-hidden="true"></span>
                                <span aria-hidden="true"></span>
                                <span aria-hidden="true"></span>
                            </a>
                        </div>

                        <div id="navbarBurger" class="navbar-menu is-hidden-desktop">
                            <div class="navbar-start">

                                <a class="navbar-item" href="{{ path('dev-quiz_main') }}">
                                    Accueil
                                                            
                                </a>
                                {% if app.user %}
                                    <a class="navbar-item" href="{{ path('dev-quiz_categories') }}">
                                        Catégories
                                                                
                                    </a>
                                    <a class="navbar-item" href="{{ path('dev-quiz_quizz') }}">
                                    Quizz  
                                    
                                    
                                    </a>
                                    <a class="navbar-item" href="{{ path('dev-quiz_account', {'id': app.user.id}) }}">
                                        Compte
                                                                
                                    </a>

                                    <div class="navbar-item is-flex is-flex-direction-row is-justify-content-center">
                                        <div class="buttons is-flex is-flex-direction-column is-justify-content-center">
                                            <a class="button is-info has-text-weight-bold" href="{{ path('app_logout') }}">
                                                Déconnexion                                 
                                            </a>
                                        </div>
                                    </div>

                                {% else %}
                                    <div class="navbar-item is-flex is-flex-direction-row is-justify-content-center">
                                        <div class="buttons is-flex is-flex-direction-column is-justify-content-center">
                                            <a class="button is-info has-text-weight-bold" href="{{ path('app_login') }}">
                                                Connexion
                                                                                
                                            </a>
                                            <a class="button is-info has-text-weight-bold" href="{{ path('dev-quiz_sign-up') }}">
                                                Inscription
                                                                                
                                            </a>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div id="navbarBasic" class="navbar-menu">
                            <a class="navbar-item" href="{{ path('dev-quiz_main') }}">
                                <img src="/logo/final-logo.png" />
                            </a>

                            <div class="container-avatar">
                                <figure class="image is-48x48">
                                    {% if app.user %}
                                        <img src="/avatar/{{ app.user.image }}" class="is-rounded image is-48x48" alt="avatar" />
                                    {% endif %}
                                    <figcaption>
                                        <p class="subtitle has-text-weight-bold">
                                            {% if app.user %}
                                                {{ app.user.username }}
                                            {% endif %}
                                        </p>
                                    </figcaption>
                                </figure>
                            </div>

                            <div class="navbar-item">

                                <a class="navbar-item" href="{{ path('dev-quiz_main') }}">
                                    Accueil
                                                                
                                </a>

                                {% if app.user %}
                                    <a class="navbar-item" href="{{ path('dev-quiz_categories') }}">
                                        Catégories
                                                        
                                    </a>
                                    <a class="navbar-item" href="{{ path('dev-quiz_quizz') }}">
                                    Quizz  
                                    
                                    
                                    </a>
                                    <a class="navbar-item" href="{{ path('dev-quiz_account', {'id': app.user.id}) }}">
                                        Compte
                                                                
                                    </a>

                                    <div class="buttons">
                                        <a class="button is-info has-text-weight-bold " href="{{ path('app_logout') }}">
                                            Déconnexion
                                                                            
                                        </a>
                                    </div>

                                {% else %}
                                    <div class="buttons">
                                        <a class="button is-info has-text-weight-bold" href="{{ path('app_login') }}">
                                            Connexion
                                                                            
                                        </a>
                                        <a class="button is-info has-text-weight-bold" href="{{ path('dev-quiz_sign-up') }}">
                                            Inscription
                                                                            
                                        </a>
                                    </div>

                                {% endif %}

                            </div>

                        </nav>

                    </header>
                    <section id="background">
                        
                            <img src="/image/quiz.jpg"/>
                        
                    </section>
                  

                    {% endblock %}
                </body>
            </html>
            